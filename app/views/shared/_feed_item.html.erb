<li>
  <div class="gravatar">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
  </div>
  <div class="micropost">
    <span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span>
    <%= render :partial => 'shared/micropost_content', 
    :locals => {:micropost => feed_item} %>
  </div>
  <%= render :partial => 'shared/micropost_deletion',
  :locals => {:micropost => feed_item} %>
</li>
